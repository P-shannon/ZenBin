<form id="authForm" action="/auth/register" method="post" accept-charset="utf-8">
	<input id="username" type="text" name="username" placeholder="Username">
	<input id="password" type="password" name="password" placeholder="Password">
	<input id="passwordConfirmation" type="password" name="passwordConfirm" placeholder="Confirm Password">
	<center>
	<input id="authSubmit" type="submit" value="Sign up">
	</center>
<script>
	const form = document.querySelector('#authForm');
	const password = document.querySelector('#password');
	const passwordConfirm = document.querySelector('#passwordConfirmation');
	form.onsubmit = function(){
		if(password.value === passwordConfirm.value){
			return true;
		}else{
			alert(`Your passwords don't match, please re-enter your passwords.`);
			password.value = '';
			passwordConfirm.value = '';
			return false;
		}
	}
</script>
</form>